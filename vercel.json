{
  "version": 2,
  "name": "crm-dashboard",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "installCommand": "cd frontend && npm install",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/$1"
    }
  ],

  "env": {
    "CRM_BASE_URL": "https://crm.conectaprime.com",
    "USE_FALLBACK_DATA": "true"
  }
}